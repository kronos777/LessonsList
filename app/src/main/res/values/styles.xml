<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalendarViewCustomStyle">
        <item name="android:background">@color/white</item>
        <item name="calendar_date_background">@color/cardColor</item>
        <item name="calendar_date_text_color">@color/black</item>
        <item name="calendar_day_bar_background">@color/custom_calendar_days_bar_background</item>
        <item name="calendar_day_bar_text_color">@color/white</item>
        <item name="calendar_grid_color">@color/white_for_day_night</item>
        <item name="calendar_grid_on_selected_dates">true</item>
        <item name="calendar_month_text_color">@color/custom_calendar_month_text_color</item>
        <item name="calendar_year_selection_arrows_color">
            @color/white
        </item>
        <item name="calendar_year_selection_background">
            @color/custom_calendar_year_selection_background
        </item>
        <item name="calendar_year_selection_text_color">
            @color/white
        </item>

    </style>

    <style name="CardStyle">
        <item name="android:textSize">18sp</item>
        <item name="textInputStyle">@id/normal</item>
        <item name="lineHeight">20dp</item>
        <item name="color">@color/black</item>
    </style>
    <style name="CardDateTimeStyle">
        <item name="android:textSize">12sp</item>
        <item name="textInputStyle">@id/normal</item>
        <item name="lineHeight">18dp</item>
        <item name="color">@color/grey</item>
    </style>





</resources>